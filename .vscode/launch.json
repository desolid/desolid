    "version": "0.2.0",
    "configurations": [
        {
            "name": "typescript_app",
            "type": "node",
            "request": "launch",
            "args": ["${workspaceFolder}\\src\\index.ts"],
            "runtimeArgs": ["-r", "ts-node/register"],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}

