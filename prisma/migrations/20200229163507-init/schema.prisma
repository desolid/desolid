datasource db {
  provider = "sqlite"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id
  createdAt DateTime @default(now())
  email     String   @unique
  name      String?
  role      Role     @default(USER)
  posts     Post[]
}

model Post {
  id        Int      @id
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  author    User
  title     String
  published Boolean  @default(false)
}

enum Role {
  USER ADMIN
}