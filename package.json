{
    "version": "0.0.9",
    "name": "desolid",
    "repository": "git@github.com:desolid/desolid.git",
    "author": "Sajjad Shirazy <shirazy.sajjad@gmail.com>",
    "license": "MIT",
    "preferGlobal": true,
    "main": "src/Desolid.js",
    "bin": {
        "desolid": "src/cli"
    },
    "files": [
        "src",
        "package-lock.json"
    ],
    "scripts": {
        "preinstall": "npx npm-force-resolutions",
        "start": "ts-node -r tsconfig-paths/register ./src/server.ts",
        "dev": "nodemon",
        "build": "rimraf ./dist && tsc -d",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "release:patch": "standard-version --release-as patch && git push && git push --tags",
        "release:minor": "standard-version --release-as minor && git push && git push --tags",
        "release:major": "standard-version --release-as major && git push && git push --tags",
        "publish": "npm run build && npm publish ./dist"
    },
    "devDependencies": {
        "@types/fs-extra": "^8.1.0",
        "@types/jsonwebtoken": "^8.3.9",
        "@types/lodash": "^4.14.150",
        "@types/md5": "^2.2.0",
        "nodemon": "^2.0.2",
        "npm-force-resolutions": "0.0.3",
        "prettier": "^1.19.1",
        "rimraf": "^3.0.2",
        "standard-version": "^7.1.0",
        "ts-node": "^7.0.1",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^3.8.3"
    },
    "dependencies": {
        "@nexus/schema": "^0.13.1",
        "@slynova/flydrive": "^0.3.1",
        "apollo-server-core": "^2.12.0",
        "chalk": "^4.0.0",
        "clear": "^0.1.0",
        "commander": "^5.1.0",
        "figlet": "^1.4.0",
        "fs-extra": "^8.1.0",
        "graphql": "^14.6.0",
        "graphql-parse-resolve-info": "^4.5.0",
        "graphql-scalars": "^1.0.7",
        "graphql-tag": "^2.10.3",
        "graphql-yoga": "^1.18.3",
        "js-yaml": "^3.13.1",
        "jsonwebtoken": "^8.5.1",
        "lodash": "^4.17.15",
        "md5": "^2.2.1",
        "path": "^0.12.7",
        "pluralize": "^8.0.0",
        "sequelize": "^5.21.6",
        "sqlite3": "^4.2.0",
        "stream-to-promise": "^2.2.0",
        "uuid": "^8.0.0"
    },
    "resolutions": {
        "graphql-upload": "^10.0.0"
    }
}
